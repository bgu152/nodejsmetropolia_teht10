doctype html 
html
    head 
        title Add customer 
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous")
    body 
        h1 New customer 
        form(action = '/addcustomer', method = 'POST')
            div.col-sm-4 
                input(type="text", name="firstname" placeholder="First name").form-control
            div.col-sm-4 
                input(type="text", name="lastname" placeholder="Last name").form-control
            div.col-sm-4 
                input(type="email", name="email" placeholder="Email").form-control
            div.col-sm-4 
                input(type="number", name="phone" placeholder="Phone number").form-control
            div.col-sm-4 
                input(type="submit", value="Add").btn.btn-primary